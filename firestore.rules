rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow anyone authenticated to read/write to doctors and rosters
    // (You can tighten this later to only 'admin' roles)
    match /doctors/{doctor} {
      allow read, write: if request.auth != null;
    }
    
    match /rosters/{roster} {
      allow read, write: if request.auth != null;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
  }
}
