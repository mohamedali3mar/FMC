rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to doctors and rosters
    match /doctors/{doctor} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /rosters/{roster} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /users/{userId} {
      allow read, write: if request.auth != null;
    }
    
    match /shifts/{shift} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
